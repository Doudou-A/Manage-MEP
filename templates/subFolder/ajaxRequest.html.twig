{% for subFolder in listSubFolder %}
	{% if subFolder.modification == 1 %}
	<div class="bg-success">{{ subFolder.name }}</div>
	{% else %}
	<div>{{ subFolder.name }}</div>	
	{% endif %}
	<div class="col-12 d-flex">
		<img src="picture/folder_win10.png" alt="Folder" width="3%"/>
		<a id="div_{{subFolder.js_id}}_add" href="javascript:visibiliteAdd('div_{{subFolder.js_id}}');">
				<p>Nouveau</p>
		</a>
		<a id="div_{{subFolder.js_id}}_folder_add" href="javascript:visibiliteFolder('div_{{subFolder.js_id}}_folder');" style="display:none;">
			<p>Ajouter un Dossier</p>
		</a>
		<div id="div_{{subFolder.js_id}}_folder_form" style="display:none;">
			<form action="http://localhost:8000/{{server}}/add/sub_folder/subFolder" id="formRegistration" method="POST">
				<div class="row col-12 p-0 m-0">
					<div class="row p-0 m-0 col-12">
						<input class="col-lg-12 p-2 animated fadeInLeft border" type="text" name="name" required="required"/>
					</div>
					<div style="display: none;">
						<input class="col-lg-12 p-2 animated fadeInLeft border" value="{{subFolder.js_id}}" type="text" name="onFolder" required="required"/>
					</div>
					<div style="display: none;">
						<input class="col-lg-12 p-2 animated fadeInLeft border" value="file" type="text" name="type" required="required"/>
					</div>
					<div style="display: none;">
						<input class="col-lg-12 p-2 animated fadeInLeft border" value='1' type="number" name="level" required="required"/>
					</div>
					<div style="display: none;">
						<input class="col-lg-12 p-2 animated fadeInLeft border" value="ok" type="text" name="subFolder_1"/>
					</div>
					<input id="submitFormRegistration" style="display: none;" type="submit" name="valide" value="Valider" class="btn border-secondary col-6 offset-3 mt-4 animated fadeInRight rounded text-white"/>
				</div>
			</form>
		</div>
	</div>
	<a id="{{subFolder.js_id}}" class="btn js-close {{subFolder.js_id}}_close">
		<div>+</div>
	</a>
	<a id="{{subFolder.js_id}}" class="btn js-open {{subFolder.js_id}}_open d-none">
		<div>-</div>
	</a>
	<div id="{{subFolder.js_id}}_request"></div>
{% endfor %}

